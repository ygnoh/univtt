

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>View_Count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><a href="/post/show/<%= post.id %>"><%= post.title %></a></td>
        <td><%= post.view_count %></td>
        <td><%= post.user.email %></td>
        <td><a href="/post/edit/<%= post.id %>">Edit</a></td>
        <td><a href="/post/destroy/<%= post.id %>">Delete</a></td>
      </tr> 
    <% end %>
  </tbody>

</table>
  <%= paginate @posts %>
<br>

<%= link_to 'New Post', '/post/new' %>