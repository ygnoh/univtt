<h2>로그인</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "이매일" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "기억해두기" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
