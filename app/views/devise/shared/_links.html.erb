<%- if controller_name != 'sessions' %>
  <span style="float: left;">
  <%= link_to "로그인", new_session_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span style="float: left;">
  <%= link_to "회원가입", new_registration_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <span style="float: right;">
  <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "인증 메일을 못 받으셨나요?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "unlock 메일을 못 받으셨나요?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "로그인 with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>

<br />