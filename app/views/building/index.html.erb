<h1>Building#index</h1>
<%= link_to "Go to admin page", '/admin' %>

<table>
	<tr>
		<th>id</th>
		<th>name</th>
		<th></th>
		<th></th>
	</tr>
	<% @buildings.each do |b| %>
		<tr>
			<td><%= b.id %></td>
			<td><%= link_to b.building_name, "/building/show/#{b.id}" %></td>
			<td><%= link_to "edit", "/building/edit/#{b.id}" %></td>
			<td><%= link_to "delete", "/building/destroy/#{b.id}", method: :delete %></td>
		</tr>
	<% end %>
</table>
